# Syntactic Grammar

definitions	::= { definition }
definition	::= type_id '=' type

type		::= sum_type | product_type

product_type	::= fields

sum_type   	::= constructor { '|' constructor } [ "attributes" fields ]

constructor	::= con_id [ fields ]

fields		::= '(' field { ',' field } ')'

field 		::= type_id [ '?' | '*' ] [ id ]



# Lexical Grammar
 
id		::= con_id | type_id

con_id		::= [A-Z][a-zA-Z0-9_]*
type_id		:;= [a-z][a-z0-9_]*





