%Specs:

HeapName:	string_heap
HeapAlloc:	allocate_on_string_heap
HeapRealloc:	reallocate_string_heap
HeapDump:	dump_string_heap


%Macros:

#define ALLOC(size, nmemb)	calloc(nmemb * size)
#define REALLOC(mem, new_size)  realloc(mem, new_size)
#define FREE(mem)		free(mem)


%Appendage:

char *strndup(const char *string, size_t len) {
    char *dup = allocate_on_string_heap(len);
    return memmove(dup, string, len);
}
